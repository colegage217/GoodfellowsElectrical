@page
@model AboutModel
@{
    ViewData["Title"] = "About Us";
    ViewData["Image"] = "~/img/Goodfellowselectrical-logo-black.jpeg";
    ViewData["Description"] = "Discover what us Goodfellows are about, our 20+ year history as family-run electricians, the areas we offer our services in, who we are as a team and the companies we've worked for";
    ViewData["Keywords"] = "about, about us, history, discover";
}

<!-- Header -->
<section class="about-bg header-normal bg-dark-2 text-white">
    <div class="container align-items-center my-auto">
        <div class="row flex-row">
            <div class="col-5">
                <h1 class="head-title">About Us</h1>
                <div class="pt-2">
                    <p class="head-subtext">Discover what us Goodfellows are about, our 20+ year history as family-run electricians, the areas we offer our services in, who we are as a team and the companies we've worked for</p>
                </div>
            </div>
            <div class="col-7 mx-auto text-center">
                <div class="head-icon">
                    <i class="fa-regular fa-lightbulb"></i>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- About Us -->
<section class="">
    <div class="container justify-content-center align-items-center">
        <div class="row flex-row">
            <div class="col-5">
                <img class="section-img" src="~/img/old-goodfellows-mobile.jpeg" alt="David and Reeza" />
            </div>
            <div class="col-7">
                <div class="row">
                    <h2 class="section-title">Who We Are</h2>
                    <h5 class="section-subtitle">About Us</h5>
                </div>
                <div class="pt-2">
                    <p>Goodfellows Electrical is a family owned and run electrical contracting business. We have been proudly serving Brisbane for 20 years in installations, maintenance and repairs in commercial, industrial and domestic settings</p>
                    <p>At Goodfellows Electrical we pride ourselves in our workmanship, customer service, knowledge and fair pricing</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- History -->
<section class="bg-light-1">
    <div class="container justify-content-center align-items-center">
        <div class="row flex-row-reverse">
            <div class="col-5">
