@page
@model ReviewsModel
@{
    ViewData["Title"] = "Customer Reviews";
    ViewData["Image"] = "~/img/Goodfellowselectrical-logo-black.jpeg";
    ViewData["Description"] = "See the testimonial reviews from our customers about the high quality service we deliver, following our previous installations";
    ViewData["Keywords"] = "review, testimonial, reviews, testimonials, customers";
}

<!-- Header -->
<section class="reviews-bg header-normal bg-dark-2 text-white">
    <div class="container align-items-center my-auto">
        <div class="row flex-row">
            <div class="col-5">
                <h1 class="head-title">Customer Reviews</h1>
                <div class="pt-2">
                    <p class="head-subtext">See the testimonial reviews from our customers about the high quality service we deliver, following our previous installations</p>
                </div>
            </div>
            <div class="col-7 mx-auto text-center">
                <div class="head-icon">
                    <i class="fa-regular fa-comment-dots"></i>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Reviews -->
<section class="bg-light-1">
    <div class="container d-flex align-items-center justify-content-center text-center">
        <div class="row flex-row">
            <h2 class="section-title">Post Installation Reviews</h2>
            <h5 class="section-subtitle">From the Customers</h5>
        </div>
        <div class="row flex-row">
            <!--<div class="col-4">-->
                <!-- Each review a col-4 -->
                <!-- See if can embed a plugin -->

            <!--</div>-->
            <div class="col-12">
                <div id="google-reviews"></div>
            </div>
        </div>
    </div>
</section>

<section class="">
    <div class="row flex-row text-center justify-content-center align-items-center">
        <h2 class="section-title">Previous Installations</h2>
        <h5 class="section-subtitle">What We Have Delivered</h5>
    </div>
    <div class="row flex-row text-center pt-3">
        <div class="col-3">
            <a href="https://www.instagram.com/p/CkhaJi2PAkw/"><img src="~/img/previous-1.jpg" alt="Domestic Lighting Installation" class="section-previous-img-2" /></a>
        </div>
        <div class="col-3">
            <a href="https://www.instagram.com/p/CkhaJi2PAkw/"><img src="~/img/previous-3.jpg" alt="Domestic Lighting Installation" class="section-previous-img-2" /></a>
        </div>
        <div class="col-3">
            <a href="https://www.instagram.com/p/CQ0D4AfFMKl/"><img src="~/img/previous-7.jpg" alt="Outdoor Stair Lighting" class="section-previous-img-2" /></a>
        </div>
        <div class="col-3">
            <a href="https://www.instagram.com/p/CW4ypPKPGZT/"><img src="~/img/previous-8.jpg" alt="Modern Domestic Lighting Installation" class="section-previous-img-2" /></a>
        </div>
    </div>
    <div class="pt-4">
        <div class="row justify-content-center align-items-center">
            <a class="section-more-btn" href="/Previous">See More</a>
        </div>
    </div>
</section>

<!-- Contact Us -->
<section class="bg-light-1">
    <div class="container justify-content-center align-items-center">
        <div class="row flex-row">
            <div class="col-3">
                <div class="head-icon text-center text-dark">
                    <i class="fa-solid fa-phone-flip"></i>
                </div>
            </div>
            <div class="col-9">
                <div class="row">
                    <h2 class="section-title">Contact Us</h2>
                    <h5 class="section-subtitle">Get in Touch</h5>
                </div>
                <div class="pt-2">
                    <p>Need to get in touch for more information? Contact us socially, have a chat over the phone or complete our submission form and we'll get back to you</p>
                </div>
                <div class="col-6 pt-3">
                    <a class="section-more-btn" href="/Contact">See More</a>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    jQuery(document).ready(function () {
        $("#google-reviews").googlePlaces({
            placeId: 'ChIJdfhJDs5FkWsRYCv5HD48We0' // placeId provided by google api documentation
            render: ['reviews'],
            min_rating: 5,
            max_rows: 0
         });
    });
</script>
